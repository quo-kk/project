<style>
  .row{
    margin-top: 75px;
    width: 2000px;
    margin-left: -500px;
  }
</style>


<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img class="logo" src="/img/item.png">
      <h3 class="text-center">Add an item</h3>
      <form action="/user/createitem" method="post">
        <div class="form-group">
          <label for="name">Name of item</label>
          <input type="text" class="form-control" name="name" value="{{name}}" required>
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="text" name="price" class="form-control" value="{{price}}" required>
        </div>
        <div class="form-group">
          <label for="productdes">Product Description</label>
          <input type="text" name="itemdes" class="form-control" value="{{itemdes}}" required>
        </div>
        <div class="form-group">
          <label for="otherinfo">Image Link</label>
          <input type="text" name="otherinfo" class="form-control" value="{{otherinfo}}" required>
        </div>
        <div class="form-group">
          <label for="category">Category</label>
          <input type="text" name="category" class="form-control" value="{{category}}" required>
        </div>
        <input type="file" id="posterUpload" name="posterUpload" accept="image/png,image/jpeg,image/jpg,image/gif">
        <div class="font-weight-bold text-danger small" id="posterErr" style="display:none"></div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>